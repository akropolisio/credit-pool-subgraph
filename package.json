{
  "name": "akropolis-os",
  "license": "UNLICENSED",
  "scripts": {
    "build:sandbox": "TYPE=sandbox yarn build",
    "build:beta": "TYPE=beta yarn build",
    "build:beta-defi": "TYPE=beta-defi yarn build",
    "build:pension-fund": "TYPE=pension-fund yarn build",
    "build:pension-fund-prod": "TYPE=pension-fund-prod yarn build",
    "build:mainnet": "TYPE=mainnet yarn build",
    "build": "yarn prepare && graph build",
    "deploy:sandbox": "TYPE=sandbox yarn deploy-thegraph in19farkt/akropolis-os-sandbox",
    "deploy:beta": "TYPE=beta yarn deploy-thegraph alekspickle/akropolis-os-beta",
    "deploy:beta-defi": "TYPE=beta-defi yarn deploy-thegraph alekspickle/akropolis-os-beta-defi",
    "deploy:pension-fund": "TYPE=pension-fund yarn deploy-thegraph in19farkt/akropolis-os-pension-fund",
    "deploy:pension-fund-prod": "TYPE=pension-fund-prod yarn deploy-thegraph in19farkt/akropolis-os-pension-fund-prod",
    "deploy:mainnet": "TYPE=mainnet yarn deploy-thegraph in19farkt/akropolis-os-mainnet",
    "deploy:canary": "yarn deploy-thegraph alekspickle/akropolis-os-canary",
    "deploy-thegraph": "yarn prepare && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/",
    "deploy:akro": "graph deploy --node https://graph-node.akropolis.io --ipfs https://graph-node.akropolis.io/ipfs akropolisio/akropolis-os2",
    "create:akro": "graph create --node https://graph-node.akropolis.io akropolisio/akropolis-os",
    "remove:local": "graph remove --node http://localhost:8020/ akropolisio/akropolis-os",
    "create:local": "graph create --node http://localhost:8020/ akropolisio/akropolis-os",
    "deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 akropolisio/akropolis-os",
    "prepare:sandbox": "TYPE=sandbox yarn prepare",
    "prepare:beta": "TYPE=beta yarn prepare",
    "prepare:beta-defi": "TYPE=beta-defi yarn prepare",
    "prepare:pension-fund": "TYPE=pension-fund yarn prepare",
    "prepare:pension-fund-prod": "TYPE=pension-fund-prod yarn prepare",
    "prepare:mainnet": "TYPE=mainnet yarn prepare",
    "prepare": "yarn prepare-manifest && yarn codegen",
    "prepare-manifest": "mustache ./config/${TYPE:-sandbox}.json subgraph.template.yaml > subgraph.yaml",
    "codegen": "graph codegen"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.17.1",
    "@graphprotocol/graph-ts": "0.17.0"
  },
  "devDependencies": {
    "mustache": "^4.0.1"
  }
}
